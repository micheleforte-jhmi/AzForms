      "allowedValues": [
        "JH-TRAINING-PROD-RG",
        "JH-TRAINING-TEST-RG"
      ],
      "metadata": {
        "description": "Select an existing Virtual Network resource group"
      }
    },
    "subnetName": {
      "type": "string",
      "defaultValue": "AZ-East-JH-Training-10.150.224.0-20",
      "allowedValues": [
        "AZ-East-JH-Training-10.150.224.0-20"
      ],
      "metadata": {
        "description": "Select a subnet name from the selected Virtual Network"
      }
    },
    "location": {
      "type": "string",
