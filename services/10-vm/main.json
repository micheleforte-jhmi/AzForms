{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.28.1.47646",
      "templateHash": "1468082059466886736"
    }
  },
  "parameters": {
    "vmName": {
      "type": "string",
      "metadata": {
        "description": "Name of the virtual machine"
      }
    },
    "virtualMachineSize": {
      "type": "string",
      "defaultValue": "Standard_D2s_v3",
      "allowedValues": [
        "Standard_D2s_v3",
        "Standard_D2s_v4",
        "Standard_D2s_v5",
        "Standard_D4s_v5"
      ],
      "metadata": {
        "description": "The virtual machine size. Enter a Premium capable VM size if DiskType is entered as Premium_LRS"
      }
    },
    "keyVaultName": {
      "type": "string",
      "defaultValue": "AzFormDeployKV",
      "metadata": {
        "description": "Key Vault name"
      }
    },
    "adminPasswordSecretName": {
      "type": "string",
      "defaultValue": "adminpassword",
      "metadata": {
        "description": "Secret name for the admin password"
      }
    },
    "windowsOSVersion": {
      "type": "string",
      "defaultValue": "2022-Datacenter",
      "allowedValues": [
        "2019-Datacenter",
        "2022-Datacenter"
      ],
      "metadata": {
        "description": "The Windows version for the VM."
      }
    },
    "vnetName": {
      "type": "string",
      "defaultValue": "AZ-East2-JH-TRAINING-10.156.224.0-20",
      "allowedValues": [
        "AZ-East-JH-Training-10.150.224.0-20",
        "AZ-East2-JH-TRAINING-10.156.224.0-20"
      ],
      "metadata": {
        "description": "Select an existing Virtual Network"
      }
    },
    "vnetResourceGroup": {
      "type": "string",
      "defaultValue": "JH-TRAINING-PROD-RG",
      "allowedValues": [
        "JH-TRAINING-PROD-RG",
        "JH-TRAINING-TEST-RG"
      ],
      "metadata": {
        "description": "Select an existing Virtual Network resource group"
      }
    },
    "subnetName": {
      "type": "string",
      "allowedValues": [
        "AZ-East2-JH-TRAINING-10.156.231.0-20",
        "AZ-East-JH-Training-10.150.224.0-20"
      ],
      "metadata": {
        "description": "Select a subnet name from the selected Virtual Network"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "CloudADM",
      "metadata": {
        "description": "Admin Username for the virtual machine"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2020-11-01",
      "name": "[format('{0}-nic', parameters('vmName'))]",
      "location": "[parameters('location')]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, parameters('vnetResourceGroup')), 'Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetName'))]"
              },
              "privateIPAllocationMethod": "Dynamic"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2020-06-01",
      "name": "[parameters('vmName')]",
      "location": "[parameters('location')]",
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('vmName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": {
            "value": "[reference(resourceId('Microsoft.KeyVault/vaults/secrets', parameters('keyVaultName'), parameters('adminPasswordSecretName')), '2021-04-01-preview').value]"
          }
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "[parameters('windowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "Standard_LRS"
            }
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', format('{0}-nic', parameters('vmName')))]"
            }
          ]
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces', format('{0}-nic', parameters('vmName')))]"
      ]
    }
  ],
  "outputs": {
    "vmId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Compute/virtualMachines', parameters('vmName'))]"
    }
  }
}